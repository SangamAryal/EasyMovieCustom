    <style name="TextAppearance.Leanback.PlaybackMediaItemName" tools:override="true">
        <item name="android:textColor">#F33331</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-regular</item>
    </style>

    <style name="Widget.Leanback.DetailsDescriptionTitleStyle" tools:override="true">
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:textAppearance">@style/TextAppearance.Leanback.DetailsDescriptionTitle
        </item>
        <item name="android:maxLines" tools:ignore="PrivateResource">
            @integer/lb_details_description_title_max_lines
        </item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:ellipsize">end</item>
        <item name="resizeTrigger">maxLines</item>
        <item name="resizedTextSize">@dimen/lb_details_description_title_resized_text_size</item>
        <item name="resizedPaddingAdjustmentTop">
            @dimen/lb_details_description_title_padding_adjust_top
        </item>
        <item name="resizedPaddingAdjustmentBottom">
            @dimen/lb_details_description_title_padding_adjust_bottom
        </item>
    </style>

    <style name="MySeekBar">
        <item name="android:progressBackgroundTint">@color/lb_playback_progress_primary_color</item>
        <item name="android:progressTint">@color/progressTint</item>
        <item name="android:colorControlActivated">@color/lb_playback_progress_primary_color</item>
    </style>

